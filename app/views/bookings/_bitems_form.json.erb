{
 "success": true,
	 "items": [
	  {
	   xtype: 'form',
	   flex: 1,	      	
	   
	   flex: 1,
		layout: {
		    type: 'vbox',
		    align : 'stretch',
		    pack  : 'start',
		}, 
	     defaults: {
	     	 xtype: 'textfield',
	     	 margin: '10 10 0 10',
	     },	  
	     
	   items: [
	   
	    <%= raw extjs_std_hiddenfield('id', @item) -%>,
	    <%= raw extjs_std_hiddenfield('booking_id', @item) -%>,	    
	   	<%= raw extjs_std_combo_model('equipment', @item) -%>,
	   	<%= raw extjs_std_textfield('quantity', @item) -%>,
	   	
	   	
	   	{xtype: 'fieldset',
         title: 'Frigo',
         layout: 'anchor',
         items: [
	   	
		   		<%= raw [
		   			extjs_std_numberfield('temperature', @item, {:allowBlank => true}), 
		   			extjs_std_numberfield('humidity', @item, {:allowBlank => true}), 
		   			extjs_std_combo('ventilation', @item, :allowBlank => true, :store => extjs_std_store_data(@item.ventilation_get_data_json))
		   			].join(',') -%>
		 ]
		},
	   	
	    <%= raw extjs_std_combo('status', @item, :store => extjs_std_store_data(@item.booking.status_get_data_json)) -%>
	   ],
	   
	   
	   
		buttons:
	        [{
	            text: 'Elimina',  cls: 'btn-del',
	            handler: function (btn, evt) {              
	             form = this.up('form').getForm();
	             if (form.isValid()) {
	             
	             	new_rec = Ext.create('BookingItem', {});
					Ext.Ajax.request({
	                    url: new_rec.proxy.api.destroy,
	                    waitMsg: 'Salvataggio in corso....',
						method:'POST',                     
	                    jsonData: {data: form.getValues()},	
	             	
						success: function(op, opts) {					
							this.up('window').fireEvent('afterSave', this.up('window'));						 							
						}, scope: this,
						
						failure: function(rec, op) {
							var result = Ext.JSON.decode(op.getResponse().responseText);
							Ext.MessageBox.show({
		                        title: 'EXCEPTION',
		                        msg: result.message,
		                        icon: Ext.MessageBox.ERROR,
		                        buttons: Ext.Msg.OK
	                    	})					
						}, scope: this,						
										 
			    	});	             
	             
	             }             
	            }
	        }, '->', {
	            text: 'Salva',
	            handler: function (btn, evt) {              
	             form = this.up('form').getForm();
	             if (form.isValid()) {
	             	new_rec = Ext.create('BookingItem', {});	             	
	             	new_rec.data = form.getValues();
	             	new_rec.save({
						success: function(rec, op) {
							this.up('window').fireEvent('afterSave', this.up('window'));
						}, scope: this,				
						
						failure: function(rec, op) {
							var result = Ext.JSON.decode(op.getResponse().responseText);
							Ext.MessageBox.show({
		                        title: 'EXCEPTION',
		                        msg: result.message,
		                        icon: Ext.MessageBox.ERROR,
		                        buttons: Ext.Msg.OK
	                    	})					
						}, scope: this,					
						 
			    	});
	             }             
	           }
	        }, {
	            text: 'Salva&Chiudi',
	            handler: function (btn, evt) {              
	             form = this.up('form').getForm();
	             if (form.isValid()) {
	             	new_rec = Ext.create('BookingItem', {});
	             	new_rec.data = form.getValues();
	             	new_rec.save({
						success: function(rec, op) {
							this.up('window').fireEvent('afterSaveClose', this.up('window'));
						}, scope: this,				
						
						failure: function(rec, op) {
							var result = Ext.JSON.decode(op.getResponse().responseText);
							Ext.MessageBox.show({
		                        title: 'EXCEPTION',
		                        msg: result.message,
		                        icon: Ext.MessageBox.ERROR,
		                        buttons: Ext.Msg.OK
	                    	})					
						}, scope: this,					
						 
			    	});
	             }             
	           }
	        }
	         
	        ]   
	  } 
	]
}