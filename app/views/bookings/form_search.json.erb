{
 "success": true,
 "items": [
  {
   xtype: 'form',
   title: 'Ricerca booking', closable: true,
   flex: 1,
	layout: {
	    type: 'vbox',
	    align : 'stretch',
	    pack  : 'start',
	}, 
     defaults: {
     	 xtype: 'textfield',
     	 margin: '10 10 0 10',
     },	
     
    items: [
	        	//ricerca numero container
	        		{
					xtype: 'form', border: false, height: 130, border: true, bodyPadding: 10,
					items: [        	
	        			{"fieldLabel":"Inserisci il numero booking","name":"num_booking", "xtype": "textfield", "labelAlign": "top", "anchor": "100%"},
	        			
						{
				            xtype: 'radiogroup',
				            fieldLabel: '',
				            layout: 'hbox',
				            items: [{
				                boxLabel: 'Aperto',
				                name: 'status',
				                inputValue: 'OPEN',
				                checked: true,
				                width: 150                
				            }, {
				                boxLabel: 'Chiuso',
				                name: 'status',
				                inputValue: 'CLOSE',
				                width: 150
				            }, {
				                boxLabel: 'Entrambi',
				                name: 'status',
				                inputValue: '',
				                width: 150
				            }]
				        },	        			
	        			
	        			{xtype: "button", text: "Cerca", iconCls: 'fa fa-search', handler: function() {
	    	            	var l_form = this.up('form').getForm();
	    	            	var l_grid = this.up('form').up('form').down('grid');

		    					if(l_form.isValid()){	            	
		    			          l_grid.store.proxy.extraParams = l_form.getValues();
		    			          l_grid.store.load();
		    				    }            	                	                
		    	            }
	        				
	        			}
	        		]} 
	        		
	        		
	        	//GRID con movimenti per container	        		
					, {
						xtype: 'grid',
						loadMask: true,
						flex: 1,
						
						layout: 'fit',
									
						store: {
							xtype: 'store',
							autoLoad: false,	
							proxy: {
								url: 'bookings/search_num_booking', 
								extraParams: {container_number: null},
								method: 'POST',
								type: 'ajax',
					
								//Add these two properties
								actionMethods: {
									read: 'POST'
								},
					
								reader: {
									type: 'json',
									method: 'POST',
									rootProperty: 'items'
								}
							},
								
							fields: [] //serve
						}, //store
						columns: [{header: 'Numero', dataIndex: 'num_booking', flex: 1},
						          {header: 'Stato', dataIndex: 'status', width: 80},
						          {header: 'Compagnia', dataIndex: 'shipowner_id_Name', width: 120},
						          {header: 'Tipo', dataIndex: 'equipment_id_Name', width: 120},
						          {header: 'Quantit√†', dataIndex: 'quantity', width: 70},
						          ],
						
						
						listeners : {
						    itemdblclick: function(dv, rec, item, index, e) {						    	
						    	acs_show_panel_std(myApp, '<%= url_for(:action=>'form_edit') -%>', {rec_id: rec.get('id')}, 'Modifica');
						    	dv.up('window').close();
						    }, scope: this
						}						 
					}	        		
	        		
	        		
	        		
	        		
	        		
        		
        		    
    ]  
     
  
  }
 ]
}