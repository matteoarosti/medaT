{
 "success": true,
 "items": [
  {
   xtype: 'form',
   title: '', closable: false,
   flex: 1,
	layout: {
	    type: 'vbox',
	    align : 'stretch',
	    pack  : 'start',
	}, 
     defaults: {
     	 xtype: 'textfield',
     	 margin: '10 10 0 10',
     },	
     
    items: [       
    <%= raw extjs_std_combo_model('repair_position', @item, {:allowBlank=>true}, {:multiSelect => false}) -%>,
    <%= raw extjs_std_combo_model('repair_component', @item, {:allowBlank=>true}, {:multiSelect => false}) -%>,
    <%= raw extjs_std_booleanfield('suggest_for_int_on_inspect', @item, {:allowBlank=>true}) -%>,
    <%= raw extjs_std_booleanfield('suggest_for_off_on_inspect', @item, {:allowBlank=>true}) -%>
    	
	
    
    ],
    
   buttons: [
	{
        text: '<i class="fa fa-th-large"></i> Applica',
        handler: function(){
        	fp = this.up('form');
            if(fp.getForm().isValid()){
               this.up('window').fireEvent('onConfirm', this.up('window'), fp);
            }
        }
    }
   ]    
    
        
  }
 ]
}