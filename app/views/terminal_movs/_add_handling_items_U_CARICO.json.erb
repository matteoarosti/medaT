{
 "success": true,
 "items": [
  {
   xtype: 'form',
   flex: 1,
	layout: {
	    type: 'vbox',
	    align : 'stretch',
	    pack  : 'start',
	}, 
     defaults: {
     	 xtype: 'textfield',
     	 margin: '10 10 0 10',
     },	  
     
   items: [
    {xtype: 'hiddenfield', name: 'handling_header_id', value: <%= @new_rec.handling_header_id -%>},
    {xtype: 'hiddenfield', name: 'handling_item_type', value: '<%= @new_rec.handling_item_type -%>'},  
    {xtype: 'hiddenfield', name: 'eu', value: 'U'},  
    {xtype: 'hiddenfield', name: 'pv', value: '<%= @hh.container_PV.to_s -%>'},
   // {xtype: 'hiddenfield', name: 'id', value: '<%= @new_rec.id -%>'},   
    
	{
		xtype: 'combobox', name: 'carrier_id',
		fieldLabel: 'Vettore',
		displayField : 'name',
		valueField:  'id',
		forceSelection: true,
		allowBlank: false,
		triggerAction: 'all',  
		
			store: Ext.create('Ext.data.Store', {
			    model: 'Shipowner',
			    proxy: {
			        autoload: true,
			        type: 'ajax',
			        url: '/carriers/get_combo_data',
			        reader: {
			            type: 'json'
			        }       
			    },			    
			}), 											  
		},
    {xtype: 'textfield', name: 'driver', fieldLabel: 'Autista'}        
   ],
   
   
	buttons:
        [{
            text: 'Salva',
            handler: function (btn, evt) {              
             form = this.up('form').getForm();
             if (form.isValid()) {
             	new_rec = Ext.create('HandlingItem', {});
             	new_rec.data = form.getValues();
             	new_rec.save({
					success: function(rec, op) {

					 //ricarico la testata e i dettagli
					 rec = this.up('window').open_vars.mov_panel.getViewModel().getData().rec;
					 var result = Ext.JSON.decode(op.getResponse().responseText);																		
					 rec.set(result.hh[0]);
					 this.up('window').open_vars.mov_panel.getViewModel().setData({rec: rec});					 
					 this.up('window').open_vars.mov_panel.down('grid').store.reload();
					 
					 //chiudo										
					 this.up('window').close();
					 								
					}, scope: this,				 
		    	});
             }             
            }
        }]   
  }
 ]
}