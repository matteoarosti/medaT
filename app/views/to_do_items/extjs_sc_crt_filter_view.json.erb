{
 "success": true,
 "items": [
  {
   xtype: 'form',
   title: '', closable: false,
   flex: 1,
	layout: {
	    type: 'vbox',
	    align : 'stretch',
	    pack  : 'start',
	}, 
     defaults: {
     	 xtype: 'textfield',
     	 margin: '10 10 0 10',
     },	
     
    items: [       
    <%= raw extjs_std_combo('status', @item, :field_name => 'status', :store => extjs_std_store_data(ToDoItem.new.status_get_data_json)) -%>,
    ],
    
   buttons: [
	{
        text: '<i class="fa fa-th-large"></i> Applica',
        handler: function(){
        	fp = this.up('form');
            if(fp.getForm().isValid()){
               this.up('window').fireEvent('onConfirm', this.up('window'), fp);
            }
        }
    }
   ]    
    
        
  }
 ]
}