{
 "success": true,
 "items": [
  {
   xtype: 'form',
   flex: 1,
	layout: {
	    type: 'vbox',
	    align : 'stretch',
	    pack  : 'start',
	}, 
     defaults: {
     	 xtype: 'textfield',
     	 margin: '10 10 0 10',
     },	  
     
   items: [    	
    	<%= raw extjs_std_combo_model('customer', @item, {fieldLabel: 'Richiedente'}) -%>,
		<%= raw extjs_std_textfield('container_number', @item, {fieldLabel: 'Container'}, allowBlank: true) -%>,    	
		<%= raw extjs_std_textfield('booking_customer', @item, {fieldLabel: 'Booking'}, allowBlank: true) -%>,
    	<%= raw extjs_std_textfield('driver', @item, {fieldLabel: 'Autista'}) -%>,
    	<%= raw extjs_std_textfield('plate', @item, {fieldLabel: 'Targa'}) -%>,
    	<%= raw extjs_std_textfield('plate_trailer', @item, {fieldLabel: 'Targa rimorchio'}, allowBlank: true) -%>,
    	{name: 'no_CD', inputValue: 'Y', labelWidth: 280, labelAlign: 'right', fieldLabel: 'Disabilita controllo su numero container', xtype: 'checkbox'}    	
	], 
	
	
	buttons: [
		{
            text: 'Salva',
            handler: function (btn, evt) {
             m_win = this.up('window');              
             form = this.up('form').getForm();
             
             //inserire uno tra container e booking cliente
             if (Ext.isEmpty(form.findField('container_number').getValue()) && Ext.isEmpty(form.findField('booking_customer').getValue())){
             	Ext.MessageBox.show({
                    title: 'EXCEPTION',
                    msg: 'Inserire almeno uno tra container e booking',
                    icon: Ext.MessageBox.ERROR,
                    buttons: Ext.Msg.OK
            	});
            	return false;
             }
             
             if (form.isValid()) {
             	btn.disable();
             	
						form.submit({
	                        url: '<%= url_for(:controller => 'weighs', :action=>'new_request', :exe_save => 'Y') -%>',
	                        //waitMsg: 'Importazione in corso....',
	                        success: function(fp, o) {
	                            Ext.MessageBox.show({
			                        title: 'Successo',
			                        msg: 'Prenotazione caricata con successo',
			                        buttons: Ext.Msg.OK
		                    	});
	                            m_win.close();
	                        },
							failure: function(fp, op) {
								var result = Ext.JSON.decode(op.response.responseText);
	                            //msg('Success', 'Processed file "' + o.result.file + '" on the server');
                                //Ext.Msg.alert('Errore in fase di creazione della prenotazione');
								Ext.MessageBox.show({
			                        title: 'Errore',
			                        msg: result.message,
			                        buttons: Ext.Msg.OK
		                    	});                                
								btn.enable();
	                        }	                        
	                    });             	
             	
             	
             	
             	
			 }
			}
	     }	
	]
	
  }
 ]
}	